// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Genre {
  key   String @id @map("_id)
  value String
}
model Star {
  id   String @id @map("_id)
  name String
}
model Movie {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  contentRating    String
  description      String
  genreList        Genre[]
  genres           String
  imDbRating       Float
  imDbRatingVotes  Int
  image            String
  metacriticRating Int
  plot             String
  runtimeStr       String
  starList         Star[]
  stars            String
}